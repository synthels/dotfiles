  }
}{\hfill$\square$}

% stupid theorem styles
\newcommand{\newfancytheoremstyle}[2]{
\newtheoremstyle{#1}
  {3pt}
  {3pt}
  {\fontseries\mddefault}
  {}
  {\bfseries\color{#2}}
  {.}
  { }
  {}
}

% defines a theorem with a fancy box
% usage:
%   \newfancytheorem{name}{color}{arc}
\newcommand{\newfancytheorem}[3]{
  \newfancytheoremstyle{#1}{#2}
  \theoremstyle{#1}
  \newtheorem{_#1}{{\color{#2}\MakeUppercase #1}}
  \newenvironment{#1}{
    \begin{tcolorbox}[
      arc=#3,
      colback=#2!10!white,
      colframe=#2!80!black,
      boxrule=0.1mm
    ]{}{}
  \begin{_#1}
  }
  {
    \end{_#1}
    \end{tcolorbox}
  }
}

\theoremstyle{definition}
\newtheorem{definition}{Definition}

% problem environment
\ifsynthels@fancyprob
  \newfancytheorem{problem}{Green}{2mm}
\else
  \newtheorem{problem}{Problem}
\fi

% theorem, lemma, example
\theoremstyle{plain}
\ifsynthels@fancythm
  \newfancytheorem{theorem}{Blue}{2mm}
  \newfancytheorem{lemma}{Purple}{2mm}
\else
  \newtheorem{theorem}{Theorem}
  \newtheorem{lemma}{Lemma}
\fi

\theoremstyle{example}
\newfancytheorem{example}{BrickRed}{0mm}

